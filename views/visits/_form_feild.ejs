<!-- الاسم  -->
<div class="mb-3">
  <input
    class="form-control"
    name="name"
    id="name"
    placeholder="الاسم"
    required
    type="text"
    value="<%= visit.name %>"
  />
</div>

<!-- رقم الهاتف -->
<div class="input-group mb-3">
  <input
    class="form-control"
    placeholder="رقم الهاتف"
    name="phoneNum1"
    id="name"
    value="<%= visit.phoneNum1 %>"
    required
  />
  <span class="input-group-text">-</span>
  <input
    class="form-control"
    placeholder="رقم الارضي"
    name="phoneNum2"
    id="name"
    value="<%= visit.phoneNum2 %>"
    required
  />
</div>
<!-- العنوان -->
<div class="input-group mb-3">
  <input
    class="form-control"
    name="ragion"
    placeholder="المنطفة"
    id="ragion"
    type="text"
    value="<%= visit.ragion %>"
    required
  />
  <span class="input-group-text">-</span>
  <input
    class="form-control"
    placeholder="اسم الشارع"
    name="stname"
    id="stname"
    type="text"
    required
    value="<%= visit.stname %>"
  />
  <span class="input-group-text">-</span>
  <input
    class="form-control"
    placeholder="رقم العماره"
    name="blnum"
    id="blnum"
    type="text"
    required
    value="<%= visit.blnum %>"
  />
  <span class="input-group-text">-</span>
  <input
    class="form-control"
    placeholder="الدور"
    name="flnum"
    id="flnum"
    type="text"
    required
    value="<%= visit.flnum %>"
  />
  <span class="input-group-text">-</span>
  <input
    class="form-control"
    placeholder="رقم الشقه"
    name="donum"
    id="donum"
    type="text"
    required
    value="<%= visit.donum %>"
  />
  <span class="input-group-text">-</span>
  <input
    class="form-control"
    placeholder="علامه مميزه"
    name="spchilmark"
    id="spchilmark"
    type="text"
    required
    value="<%= visit.spchilmark %>"
  />
</div>

<!-- التحاليل -->
<div class="input-group mb-3">
  <span class="input-group-text mb-3">اسماء التحاليل</span>
  <textarea
    class="form-control mb-3"
    aria-label="With textarea"
    name="tests"
    id="tests"
    required
  >
<%= visit.tests %></textarea
  >
</div>

<!-- الوقت  -->
<div class="input-group mb-3">
  <select class="form-select" aria-label="Default select example" name="time">
    <option selected><%= visit.time %></option>
    <option value="0-8:00-8:30">8:00-8:30</option>
    <option value="1-9:00-9:30">9:00-9:30</option>
    <option value="2-10:00-10:30">10:00-10:30</option>
    <option value="3-11:00-11:30">11:00-11:30</option>
    <option value="4-12:00-12:30">12:00-12:30</option>
    <option value="5-1:00-1:30">1:00-1:30</option>
    <option value="6-2:00-2:30">2:00-2:30</option>
    <option value="7-3:00-3:30">3:00-3:30</option>
    <option value="8-4:00-4:30">4:00-4:30</option>
    <option value="9-5:00-5:30">5:00-5:30</option>
    <option value="90-6:00-6:30">6:00-6:30</option>
    <option value="91-7:00-7:30">7:00-7:30</option>
  </select>

  <span class="input-group-text">-</span>
  <input
    class="form-control mp-3"
    name="date"
    id="date"
    type="date"
    required
    value="<%= visit.date %>"
  />
  <span class="input-group-text">-</span>
  <input
    class="form-control mp-3"
    name="creater"
    id="creater"
    type="text"
    name="creater"
    placeholder="مستقبل الزياره"
    value="<%= visit.creater %>"
    required
  />
  <select name="chimist" class="form-select" required id="">
    <option selected><%= visit.chimist %></option>
    <option value="علاء عبد النعيم">علاء عبد النعيم</option>
    <option value="عمر يوسف">عمر يوسف</option>
    <option value="السيد عطية">السيد عطية</option>
    <option value="السيد احمد">السيد احمد</option>
    <option value="محمود السيد">محمود السيد</option>
    <option value="إبراهيم أحمد">إبراهيم أحمد</option>
    <option value="مصطفي فوزي">مصطفي فوزي</option>
    <option value="بيتر وليم">بيتر وليم</option>
    <option value="كيرلس جاب الله">كيرلس جاب الله</option>
    <option value="فادي صبري">فادي صبري</option>
    <option value="عبده محمود">عبده محمود</option>
    <option value="نجلاء">نجلاء</option>
    <option value="نسمة">نسمة</option>
    <option value="محمد يوسف">محمد يوسف</option>
    <option value="-_-">-_-</option>
  </select>
</div>

<div class="input-group mb-3">
