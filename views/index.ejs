<!DOCTYPE html>
<html dir="rtl" lang="ar">
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body class="body">
    <header class="container header">
      <h1 class="mb-4 mt-4">Home visit System</h1>
    </header>
    <nav class="container nav">
      <a href="/new" class="btn btn-primary m-4">New Visit</a>
      <form action="/" method="get" class="m-2">
        <button class="btn btn-primary" type="submit">Search</button>
        <input type="text" class="search" name="search" required />
      </form>
      <form action="/" method="get" class="m-2 form-inline">
        <button type="submit" class="btn btn-primary">Get</button>
        <input type="date" name="searchDate" id="searchDate" />
      </form>
    </nav>
    <article class="container">
      <% visits.forEach((visit,i) =>{ %>
      <div class="card container <%= visit.stat %>">
        <a href="/visits/<%= visit._id %> " class="edit">
          <div class="card-body">
            <span class="count"><%= i+1 %> </span>
            <h6 class="card-title"><%= visit.name %></h6>
            <p class="text-muted"><%= visit.phoneNum1 %></p>
            <p class="text-muted"><%= visit.ragion %></p>
            <p class="text-muted"><%= visit.time %></p>
            <p class="text-muted"><%= visit.date %></p>
            <p class="text-muted"><%= visit.chimist %></p>
            <p class="text-muted"><%= visit.cost %></p>
          </div>
        </a>
      </div>
      <% }) %>
    </article>
    <script src="/javascripts/main.js"></script>
  </body>
</html>
